{
  "include": ["src/**/*"],
  "compilerOptions": {
    "noImplicitAny": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "src/*"
      ]
    },
    "lib": ["DOM", "ESNext", "ES6"]
  }
}